// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// prisma/schema.prisma

model Category {
  id          String     @id @default(cuid())
  name        String     @unique
  description String?
  questions   Question[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Question {
  id            Int      @id @default(autoincrement())
  title         String
  content       String
  optionsData   String   // Store options as JSON string
  answer        String
  explanation   String
  category      String
  categoryId    String   
  categoryRel   Category @relation(fields: [categoryId], references: [id])
  questionOptions Option[]  // Relation to Option model
  qualityScore  Int      @default(0)  // Store quality score as integer
  qualityLevel  String   @default("unknown")  // Store quality level as string
  sourceFile    String?  // Store source file path
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Option {
  id         String   @id @default(cuid())
  text       String   
  isCorrect  Boolean
  questionId Int      
  question   Question @relation(fields: [questionId], references: [id])
  originalIndex String?  // Store original index if available
  confidence   String   @default("low")  // Store confidence level
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model CodeExample {
  id            String   @id @default(cuid())
  type          String   // 'admin' o 'developer'
  certification String   // 'CCDAK' o 'CCAK'
  category      String   // Nombre de la categoría principal
  subcategory   String   // Nombre de la subcategoría
  language      String   // Lenguaje del ejemplo
  code          String   // Código del ejemplo
  explanation   String   // Explicación del ejemplo
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([type, category, subcategory, language])
} 